<header class="p-3 text-bg-dark">
  <div class="container"; class="mx-auto" style="width: 950px;">

    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <%= render 'partials/logo' %>

          <li><%= link_to "COLLECTION", "#", class: "nav-link px-2 text-white" %></li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white"role="button" data-bs-toggle="dropdown" aria-expanded="false">
              OUTILS
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Carte aléatoire", "#", class: "dropdown-item" %></li>
              <li><%= link_to "Tableau de collection", "#", class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Blog", "#", class: "dropdown-item" %></li>
            </ul>
          </li>
          <li><%= link_to "RECHERCHE DE CARTES", "#", class: "nav-link px-2 text-white me-4"%></li>
          <!-- Barre de recherche
          <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
            <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Recherche ta carte..." aria-label="Search">
          </form>
          -->
          <% if rodauth.logged_in? %>
            <div class="dropdown">
              <button class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" type="button">
                <%= current_account.profile.name %>
              </button>
              <div class="dropdown-menu dropdown-menu-end">
                <%= link_to "Changer de mot de passe", rodauth.change_password_path, class: "dropdown-item" %>
                <%= link_to "Changer d'email ", rodauth.change_login_path, class: "dropdown-item" %>
                <div class="dropdown-divider"></div>
                <%= link_to "Fermer ton compte", rodauth.close_account_path, class: "dropdown-item text-danger" %>
                <%= link_to "Déconnexion", rodauth.logout_path, data: { turbo_method: :post }, class: "dropdown-item" %>
              </div>
              <!-- Ajouter condition si Admin -->
              <%= link_to "ADMIN", "#", class: "btn btn-success disabled" %>
            </div>

          <% else %>
            <div>
              <%= link_to "Connexion", rodauth.login_path, class: "btn btn-primary  me-md-2" %>
              <%= link_to "Inscription", rodauth.create_account_path, class: "btn btn-success me-md-2" %>
            </div>
          <% end %>
        </div>
      </ul>
    </div>
  </div>
</header>
