<% if @cards["data"] == nil %>
  <div class="container">
    <%= render "partials/not_found" %>
  </div>
<% else %>
  <% @cards["data"].each_with_index do |card, index| %>
    <div class="card" style="width: 18rem;">
      <% if card["layout"] == "transform" || card["layout"] == "modal_dfc" %>
        <!-- Modal for double faced cards with transform or modal_dfc layout -->
        <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel<%= index %>" tabindex="-1">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalToggleLabel<%= index %>"><%= card["card_faces"][0]["printed_name"] %></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <img src="<%= card["card_faces"][0]["image_uris"]["normal"] %>" class="card-img-top" alt="<%= card["card_faces"][0]["name"] %>">
              </div>
              <div class="modal-footer">
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle2<%= index %>" data-bs-toggle="modal">Verso</button>
              </div>
            </div>
          </div>
          </div>
          <div class="modal fade" id="exampleModalToggle2<%= index %>" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2<%= index %>" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                <div class="modal-header">
                <!-- Avec l'index on peut afficher le nom de la carte en fonction de l'index de la boucle -->
                  <h1 class="modal-title fs-5" id="exampleModalToggleLabel2<%= index %>"><%= card["card_faces"][1]["printed_name"] %></h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <img src="<%= card["card_faces"][1]["image_uris"]["normal"] %>" class="card-img-top" alt="<%= card["card_faces"][1]["name"] %>">
                </div>
                <div class="modal-footer">
                  <button class="btn btn-primary" data-bs-target="#exampleModalToggle" data-bs-toggle="modal">Recto</button>
                </div>
              </div>
            </div>
          </div>

          <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModalToggle">
            <img src="https://img.icons8.com/ios-filled/50/000000/rotate-left.png" style="position: absolute; top: 0; right: 0;"/>
            <img src="<%= card["card_faces"][0]["image_uris"]["normal"] %>" class="card-img-top" alt="<%= card["card_faces"][0]["name"] %>">
          </a>
        </div>

      <% else %>
        <!-- Modal for normal cards -->
        <div class="modal fade" id="exampleModalToggle<%= index %>" aria-hidden="true" aria-labelledby="exampleModalToggleLabel<%= index %>" tabindex="-1">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalToggleLabel<%= index %>"><%= card["printed_name"] %></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <img src="<%= card["image_uris"]["normal"] %>" class="card-img-top" alt="<%= card["name"] %>">
              </div>
              <div class="modal-footer">
                <!-- Button add to deck in modal -->
                <%= link_to "Ajouter", search_cards_path(card_id: card["id"]), method: :post, class: "btn btn-primary" %>
                <button class="btn btn-secondary" data-bs-target="#exampleModalToggle<%= index %>" data-bs-toggle="modal">Fermer</button>
              </div>
            </div>
          </div>
        </div>

        <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModalToggle<%= index %>">
          <img src="<%= card["image_uris"]["normal"] %>" class="card-img-top" alt="<%= card["name"] %>">
        </a>

      <% end %>
    </div>
  <% end %>
<% end %>
