<div class="container text-center my-5">
  <h1><strong><span class=" pb-3 background-gradient">Ta recherche de cartes :</span></strong></h1>
  <p class="lead my-5">Voici les <%= @cards["total_cards"] %> cartes que nous avons trouv√© pour vous !</p>

    <div class="row">
    <!-- Affiche la barre de recherche au milieu de la page -->
      <div class="col-md-6 offset-md-3">
        <%= form_tag(new_card_path, method: :get) do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], placeholder: "Recherche", class: "form-control" %>
            <%= submit_tag "Rechercher", class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-1 g-3 mt-3">
      <%= render "partials/modals_cards" %>
    </div>
</div>
